{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CPF Organizations Index",
  "description": "Index of all organizations with quick stats",
  "type": "object",
  "required": ["metadata", "organizations"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["version", "last_updated", "total_organizations"],
      "properties": {
        "version": {
          "type": "string",
          "description": "Schema version",
          "example": "2.0"
        },
        "last_updated": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of last update"
        },
        "total_organizations": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of organizations"
        }
      }
    },
    "organizations": {
      "type": "array",
      "description": "Array of organization summaries",
      "items": {
        "type": "object",
        "required": ["id", "name", "industry", "size", "country", "language", "created_at", "updated_at", "stats"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "Unique organization ID (kebab-case)",
            "example": "techcorp-global"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "description": "Organization name"
          },
          "industry": {
            "type": "string",
            "enum": [
              "Technology",
              "Finance",
              "Healthcare",
              "Retail",
              "Education",
              "Manufacturing",
              "Government",
              "Energy",
              "Transportation",
              "Telecommunications",
              "Other"
            ],
            "description": "Industry sector"
          },
          "size": {
            "type": "string",
            "enum": ["small", "medium", "enterprise"],
            "description": "Organization size"
          },
          "country": {
            "type": "string",
            "pattern": "^[A-Z]{2}$",
            "description": "ISO 3166-1 alpha-2 country code",
            "example": "US"
          },
          "language": {
            "type": "string",
            "enum": ["en-US", "it-IT", "es-ES", "fr-FR", "de-DE"],
            "description": "Organization language"
          },
          "sede_sociale": {
            "type": "string",
            "description": "Registered office address / Sede legale"
          },
          "partita_iva": {
            "type": "string",
            "description": "VAT number / Partita IVA"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          },
          "stats": {
            "type": "object",
            "required": ["total_assessments", "completion_percentage", "overall_risk", "avg_confidence"],
            "properties": {
              "total_assessments": {
                "type": "integer",
                "minimum": 0,
                "maximum": 100,
                "description": "Number of completed assessments"
              },
              "completion_percentage": {
                "type": "number",
                "minimum": 0,
                "maximum": 100,
                "description": "Completion percentage (0-100)"
              },
              "overall_risk": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "description": "Overall risk score (0.0 = low, 1.0 = high)"
              },
              "avg_confidence": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "description": "Average confidence level"
              },
              "last_assessment_date": {
                "type": "string",
                "format": "date-time",
                "description": "Date of last assessment"
              }
            }
          }
        }
      }
    }
  }
}
