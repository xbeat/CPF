#!/usr/bin/osascript

-- CPF Dashboard Launcher
-- AppleScript wrapper that stays in Dock

-- Global variable to store Terminal window ID
property terminalWindowID : 0

on run
    set dashboardPath to findDashboardPath()

    if dashboardPath is "" then
        display alert "CPF Dashboard Error" message "Cannot find CPF dashboard folder"
        return
    end if

    -- Kill existing server on port 3000
    try
        do shell script "/usr/bin/lsof -ti:3000 | /usr/bin/xargs /bin/kill -9 2>/dev/null"
    end try

    delay 1

    -- Find npm path
    set npmPath to ""
    try
        set npmPath to do shell script "/bin/ls -1d $HOME/.nvm/versions/node/*/bin 2>/dev/null | /usr/bin/tail -1"
    end try
    if npmPath is "" then
        set npmPath to "/usr/local/bin"
    end if

    -- Open Terminal and run server
    tell application "Terminal"
        activate
        set serverWindow to do script "cd " & quoted form of dashboardPath & " && export PATH='" & npmPath & ":/usr/local/bin:/opt/homebrew/bin:/usr/bin:/bin:$PATH' && /bin/bash start.sh"
        set terminalWindowID to id of front window
        -- Save window ID to temp file for cleanup
        do shell script "/bin/echo " & terminalWindowID & " > /tmp/.cpf_terminal_window_id"
    end tell

    -- Keep app running while Terminal window is open
    -- When user closes Terminal window, app will quit
    repeat
        delay 2
        try
            tell application "Terminal"
                if not (exists window id terminalWindowID) then
                    -- Terminal window was closed, clean up and quit app
                    do shell script "/bin/rm -f /tmp/.cpf_terminal_window_id"
                    return
                end if
            end tell
        on error
            -- Terminal closed or error, quit app
            do shell script "/bin/rm -f /tmp/.cpf_terminal_window_id"
            return
        end try
    end repeat
end run

on quit
    -- Clean up: kill server on port 3000 and close the Terminal window
    try
        do shell script "/usr/bin/lsof -ti:3000 | /usr/bin/xargs /bin/kill -9 2>/dev/null"
    end try
    -- Close Terminal window using saved ID
    try
        set savedID to do shell script "/bin/cat /tmp/.cpf_terminal_window_id 2>/dev/null"
        set windowID to savedID as integer
        tell application "Terminal"
            close window id windowID
        end tell
        do shell script "/bin/rm -f /tmp/.cpf_terminal_window_id"
    end try
    continue quit
end quit

on findDashboardPath()
    set configFile to (POSIX path of (path to home folder)) & ".cpf_dashboard_path"

    -- Check saved path
    try
        set savedPath to do shell script "/bin/cat " & quoted form of configFile
        if (do shell script "/bin/test -f " & quoted form of (savedPath & "/start.sh") & " && echo yes") is "yes" then
            return savedPath
        end if
    end try

    -- Auto-detect common locations
    set homeDir to POSIX path of (path to home folder)
    set possiblePaths to {¬
        homeDir & "CPF/dashboard", ¬
        homeDir & "Desktop/CPF/dashboard", ¬
        homeDir & "Documents/CPF/dashboard", ¬
        homeDir & "Projects/CPF/dashboard"}

    -- Also check Lavori folder
    try
        set lavoriDirs to paragraphs of (do shell script "/bin/ls -1d " & quoted form of (homeDir & "Lavori/*/github/CPF/dashboard") & " 2>/dev/null")
        set possiblePaths to possiblePaths & lavoriDirs
    end try

    repeat with aPath in possiblePaths
        try
            if (do shell script "/bin/test -f " & quoted form of (aPath & "/start.sh") & " && echo yes") is "yes" then
                -- Save path for next time
                do shell script "/bin/echo " & quoted form of aPath & " > " & quoted form of configFile
                return aPath
            end if
        end try
    end repeat

    -- Ask user to select
    set selectedFolder to choose folder with prompt "Select the CPF dashboard folder (containing start.sh):"
    set selectedPath to POSIX path of selectedFolder
    if selectedPath ends with "/" then
        set selectedPath to text 1 thru -2 of selectedPath
    end if

    -- Verify and save
    try
        if (do shell script "/bin/test -f " & quoted form of (selectedPath & "/start.sh") & " && echo yes") is "yes" then
            do shell script "/bin/echo " & quoted form of selectedPath & " > " & quoted form of configFile
            return selectedPath
        end if
    end try

    return ""
end findDashboardPath
