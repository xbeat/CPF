{
  "name": "cpf-auth-module",
  "version": "1.0.0",
  "description": "Top-tier authentication module for CPF Dashboard - Multi-tenant, secure, enterprise-grade",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "NODE_ENV=development node server/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:auth": "node tests/auth.test.js",
    "test:security": "node tests/security.test.js",
    "test:standalone": "node tests/auth.test.js && node tests/security.test.js",
    "db:init": "node server/schemas/init-db.js",
    "db:migrate": "node server/schemas/migrate.js",
    "seed:admin": "node server/schemas/seed-admin.js"
